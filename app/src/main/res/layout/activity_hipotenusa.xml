<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hipotenusa">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:text="Hipotenusa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/catetoa"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Ingrese un el Cateto A"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <EditText
        android:id="@+id/catetob"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Ingrese un el Cateto B"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catetoa" />


    <Button
        android:id="@+id/btnHipotenusa"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:text="Calcular la Hipotenusa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catetob" />




</androidx.constraintlayout.widget.ConstraintLayout>
